<!-- views/thankyou.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thank You for Signing Up</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color:#9BA4B5;

            text-align: center;
            margin: 50px;
            color: #343a40;
        }

        .thankyou-container {
            background-color: #28a745;
            color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            margin: 0 auto;
        }

        h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        p {
            font-size: 18px;
            margin-bottom: 30px;
        }

        a {
            text-decoration: none;
            color: #ffffff;
            font-weight: bold;
            padding: 10px 20px;
            background-color: #218838;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        a:hover {
            background-color: #1e7e34;
        }
    </style>
</head>

<body>
    <div class="thankyou-container">
        <h1>Thank You for Signing Up!</h1>
        <p>We're excited to have you on board. Your account has been successfully created.</p>
        <p>Your unique PIN number is: <strong><%= pin %></strong></p>
        <p>Please keep this PIN number safe, as you will need it to log in again.</p>
        <a href="/">Go to Home</a>
    </div>
</body>

</html>
